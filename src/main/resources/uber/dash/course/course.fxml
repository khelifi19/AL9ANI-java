                  <Font name="System Bold" size="13.0" />
               </font>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </ToggleButton>
         </children>
      </VBox>
      <TableView fx:id="tableViewCourses" layoutX="239.0" layoutY="240.0" prefHeight="314.0" prefWidth="526.0">
