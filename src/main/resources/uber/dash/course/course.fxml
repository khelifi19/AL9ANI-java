         </items>
      </ToolBar>
      <VBox layoutX="10.0" layoutY="67.0" prefHeight="613.0" prefWidth="150.0" style="-fx-background-color: #EAECEE;">
         <children>
            <ImageView fitHeight="84.0" fitWidth="204.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@../Img/al9aniwhite.png" />
               </image>
            </ImageView>
            <ToggleButton fx:id="btnVehicule" mnemonicParsing="false" prefHeight="26.0" prefWidth="154.0" style="-fx-background-color: #EAECEE;" text="Gestion Des Vehicules" textFill="#1a1919">
